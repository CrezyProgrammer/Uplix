<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:gravity="start|center_vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/messageUserAvatarC"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start|bottom"
        android:gravity="start"
        android:scaleType="centerCrop"
        app:riv_corner_radius_bottom_left="15dip"
        app:riv_corner_radius_bottom_right="15dip"
        app:riv_corner_radius_top_left="15dip"
        app:riv_corner_radius_top_right="15dp"
        app:riv_mutate_background="true"
        app:riv_oval="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyM"
        android:gravity="start|center_vertical"
        android:layout_gravity="start|center_vertical"
        android:orientation="vertical"
        android:layout_weight="1"
        android:scaleType="fitStart"
        android:layout_toEndOf="@id/messageUserAvatar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@id/image"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/loading"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                app:riv_corner_radius_bottom_left="0dip"
                app:riv_corner_radius_bottom_right="15dip"
                app:riv_corner_radius_top_left="15dip"
                app:riv_corner_radius_top_right="15dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"/>
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/react"
                android:layout_marginEnd="@dimen/message_incoming_bubble_margin_right"
                android:layout_height="25dp"
                android:src="@drawable/emoji_blue"
                android:layout_gravity="center_vertical|start" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="70dp"
        android:textColor="@color/dark_grey_two" />
</LinearLayout>